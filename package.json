{
  "name": "attractive.js",
  "version": "0.3.0",
  "description": "A light-weight library for declarative DOM actions using data attributes",
  "scripts": {
    "build": "rollup -c",
    "dev": "npm-run-all --parallel dev:*",
    "dev:watch": "rollup -c -w",
    "dev:serve": "npx http-server . -p 8080 -o /test",
    "prepublishOnly": "npm run build"
  },
  "author": "Rails Designer",
  "homepage": "https://railsdesigner.com/attractive-js/",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rails-designer/attractive-js.git"
  },
  "bugs": {
    "url": "https://github.com/rails-designer/attractive-js/issues"
  },
  "module": "dist/attractive.js",
  "main": "dist/attractive.js",
  "files": [
    "dist"
  ],
  "license": "MIT",
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^16.0.1",
    "http-server": "^14.1.1",
    "rollup": "^2.79.2",
    "rollup-plugin-terser": "^7.0.2"
  },
  "dependencies": {
    "npm-run-all": "^4.1.5"
  }
}
